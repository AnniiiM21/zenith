{
  "manifest_version": 3,
  "name": "Zenith - Peak Productivity Timer & Focus Tracker",
  "version": "1.0.1",
  "description": "Advanced productivity timer with real browser activity tracking, focus sessions, and detailed analytics.",
  "permissions": ["storage", "tabs", "activeTab", "alarms", "notifications"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Zenith Timer",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/zenith_logo.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/zenith_logo.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.png", "*.jpg", "*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
